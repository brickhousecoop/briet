{
  "workspaces": [
    "apps/tagger",
    "apps/server",
    "apps/market",
    "packages/*"
  ],
  "scripts": {
    "dev-tagger": "vercel link --project=bh-briet-tagger --scope=nocomment --yes",
    "dev-server": "vercel link --project=bh-briet-server --scope=nocomment --yes",
    "dev-market": "vercel link --project=bh-briet-market --scope=nocomment --yes",
    "dev": "npm run dev-server & turbo run dev",
    "build": "turbo run build",
    "build:tagger": "turbo run build --filter=bh-briet-tagger",
    "build:server": "turbo run build --filter=bh-briet-server",
    "build:market": "turbo run build --filter=bh-briet-market"
  },
  "devDependencies": {
    "eslint-config-turbo": "^0.0.4",
    "turbo": "^1.5.6",
    "vercel": "^28.4.10"
  }
}
